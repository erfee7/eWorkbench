# ----------------------------------
#       Security settings
# ----------------------------------

# Trust X-Forwarded-For headers
# Set to 1 only when behind a trusted proxy (e.g. nginx is used)
EW_TRUST_PROXY=1

# Login throttling
EW_LOGIN_MAX_ATTEMPTS=10
EW_LOGIN_WINDOW_MS=600000
EW_LOGIN_BLOCK_MS=600000
EW_LOGIN_FAIL_DELAY_MS=250

# Auth validation throttling
# This is for validating existing sessions (user still exists and is active)
EW_AUTH_VALIDATION_TTL_SECONDS=30
EW_AUTH_VALIDATE_MAX_PER_WINDOW=60
EW_AUTH_VALIDATE_WINDOW_MS=60000
EW_AUTH_VALIDATE_BLOCK_MS=60000

# Sync payload cap (bytes)
EW_SYNC_MAX_BODY_BYTES=33554432

# Sync write throttling (per user)
EW_SYNC_WRITE_MAX_PER_WINDOW=60
EW_SYNC_WRITE_WINDOW_MS=60000
EW_SYNC_WRITE_BLOCK_MS=60000

# Same-origin enforcement for sync writes (default true in production)
EW_SYNC_REQUIRE_SAME_ORIGIN_WRITES=1

# Conversation ID validation
EW_SYNC_CONVERSATION_ID_MAX_LEN=128

# PG pool guardrails
PG_POOL_MAX=10
PG_POOL_CONNECTION_TIMEOUT_MS=3000
PG_POOL_IDLE_TIMEOUT_MS=30000
PG_STATEMENT_TIMEOUT_MS=8000